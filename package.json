{
  "name": "i18n-next",
  "version": "1.0.0",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "wordpress",
    "gutenberg",
    "i18n"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:bin",
    "build:lib": "npx tsup src/**/*.ts --outDir lib",
    "build:bin": "tsc --outDir ./bin --p ./tools/tsconfig.json",
    "build:watch": "tsc --watch",
    "bin": "node ./bin/index.js --textdomain default --locale en_US --format=php",
    "test": "vitest",
    "lint": "npx @biomejs/biome check --apply src tests tools",
    "bench": "node ./benchmark"
  },
  "type": "module",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "exports": {
    "import": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "require": {
      "types": "./lib/index.d.cts",
      "default": "./lib/index.cjs"
    }
  },
  "bin": {
    "pot-to-php": "./bin/index.js"
  },
  "dependencies": {
    "@tannin/sprintf": "^1.2.0",
    "@wordpress/hooks": "^3.57.0",
    "gettext-parser": "^8.0.0",
    "tannin": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/gettext-parser": "^4.0.4",
    "@types/node": "^20.12.10",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "tsup": {
    "skipNodeModulesBundle": true,
    "dts": true,
    "bundle": false,
    "treeshake": true,
    "minify": true,
    "clean": true,
    "format": [
      "esm",
      "cjs"
    ],
    "tsconfig": "./tsconfig.json",
    "cjsInterop": true,
    "entry": [
      "src/**/*.ts"
    ]
  }
}
