{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ES2022"
      ],
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "Node",
      "allowJs": true,
      "checkJs": true,
      "jsx": "react-jsx",
      "jsxImportSource": "react",
      "baseUrl": "./src",
      "noEmit": false,
      "declaration": true,
      "outDir": "./lib"
    },
	"include": ["src/**/*", "test/**/*"],
}
