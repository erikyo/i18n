{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
      "lib": [
        "DOM",
        "DOM.Iterable",
        "ES2022"
      ],
      "target": "ES2015",
      "module": "ES2015",
      "moduleResolution": "Node",
      "allowJs": true,
      "checkJs": true,
      "baseUrl": "./src",
      "declaration": true,
      "outDir": "./lib"
    },
	"include": ["src/**/*", "test/**/*"],
    "exclude": ["tools/**/*"]
}
